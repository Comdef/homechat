{
  "info": {
    "name": "HomeChat PSGI API",
    "_postman_id": "homechat-psgi-api",
    "description": "Postman collection for HomeChat PSGI API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "POST /login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }],
        "body": { "mode": "urlencoded", "urlencoded": [
          { "key": "login", "value": "john_doe" },
          { "key": "password", "value": "secret123" }
        ] },
        "url": { "raw": "{{base_url}}/login", "host": ["{{base_url}}"], "path": ["login"] }
      }
    },
    {
      "name": "POST /user/register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }],
        "body": { "mode": "urlencoded", "urlencoded": [
          { "key": "email", "value": "john@example.com" },
          { "key": "login", "value": "john_doe" },
          { "key": "password", "value": "secret123" }
        ] },
        "url": { "raw": "{{base_url}}/user/register", "host": ["{{base_url}}"], "path": ["user","register"] }
      }
    },
    {
      "name": "GET /user/get/{id}",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
        "url": { "raw": "{{base_url}}/user/get/1", "host": ["{{base_url}}"], "path": ["user","get","1"] }
      }
    },
    {
      "name": "Unauthorized /user/get/{id}",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/user/get/1", "host": ["{{base_url}}"], "path": ["user","get","1"] }
      }
    },
    {
      "name": "404 Not Found",
      "request": {
        "method": "GET",
        "url": { "raw": "{{base_url}}/nonexistent", "host": ["{{base_url}}"], "path": ["nonexistent"] }
      }
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:5000" },
    { "key": "access_token", "value": "" }
  ]
}

